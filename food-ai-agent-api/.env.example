# Application
APP_NAME=food-ai-agent-api
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Database (PostgreSQL + pgvector)
# Local development
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/food_ai_agent
# Cloud SQL via Unix socket (Cloud Run)
# DATABASE_URL=postgresql+asyncpg://user:pass@/food_ai_agent?host=/cloudsql/PROJECT:asia-northeast3:INSTANCE
# Cloud SQL via Private IP (VPC)
# DATABASE_URL=postgresql+asyncpg://user:pass@10.x.x.x:5432/food_ai_agent
DATABASE_ECHO=false

# JWT Auth
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Anthropic (Claude API)
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-sonnet-4-6
CLAUDE_MAX_TOKENS=4096

# OpenAI (Embeddings)
OPENAI_API_KEY=sk-your-key-here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# RAG Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_KEYWORD_WEIGHT=0.3
RAG_VECTOR_WEIGHT=0.7
